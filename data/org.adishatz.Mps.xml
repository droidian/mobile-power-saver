<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
"http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">

<node>
  <!--
      org.adishatz.Mps:
      @short_description: Mps daemon
  -->
  <interface name='org.adishatz.Mps'>
     <!--
        Set:

        Set setting to value
      -->
      <method name='Set'>
        <arg direction='in' name='setting' type='s'/>
        <arg direction='in' name='value' type='v'/>
      </method>

      <!--
        SimulateSreenOff:

        Simulate screen off state
      -->
      <method name='SimulateScreenOff'>
        <arg direction='in' name='simulate' type='b'/>
      </method>

      <!--
        ScreenStateChanged:

        Signal emitted when screen state changed.
      -->
      <signal name='ScreenStateChanged'>
        <arg type='b' name='enabled'/>
      </signal>

   </interface>
</node>
